[Argument]
removeTopSwitch = switch, true, false, tag = 移除置顶项, desc = 是否启用移除置顶项功能
removeBannerSwitch = switch, true, false, tag = 移除轮播图, desc = 是否启用移除轮播图功能

[Rewrite]
^https?:\/\/api\.zuihuimai\.com\/static\/.*\/hongbao reject
^https?:\/\/dat\.ruanmei\.com\/ithome\/money\/acd\.json$ reject

[Script]
http-response ^https:\/\/napi\.ithome\.com\/api\/(?:news\/index|topmenu\/getfeeds\?|api\/douyin\/GetLiveInfo) script-path = https://kelee.one/Resource/Script/IThome/IThome_remove_ads.js, requires-body = true, tag = [IT之家]移除广告, argument=[{removeTopSwitch},{removeBannerSwitch}]
  
